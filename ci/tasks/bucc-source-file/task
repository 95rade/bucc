#!/usr/bin/env bash

set -e

if [ -d bucc-state/state ]; then
    mv bucc-state/{vars.yml,state} bucc/
fi

source <(./bucc/bin/bucc env)

set +e
cat bucc-source-file/config.json <<EOF
{
  "target": "$BOSH_ENVIRONMENT",
  "client_secret": "$BOSH_CLIENT_SECRET",
  "client": "$BOSH_CLIENT",
  "ca_cert": "$BOSH_CA_CERT"
}
EOF
