#!/usr/bin/env bash

set -e

if [ -d bucc-state/state ]; then
    mv bucc-state/{vars.yml,state} bucc/
fi

cp -r bosh-cache/.bosh ${HOME} | true

pushd bucc > /dev/null

echo "Bucc version"
./bin/bucc | head -n1

echo ${VARS} > "vars.yml"

./bin/bucc up ${ARGS}

popd > /dev/null

mv bucc/{vars.yml,state} bucc-state-out

cp -r ${HOME}/.bosh bosh-cache
