#!/usr/bin/env bash

set -e
set -o pipefail

pushd bucc > /dev/null

if [[ -z $(git config --global user.email) ]]; then
    git config --global user.email "ci@starkandwayne.com"
fi
if [[ -z $(git config --global user.name) ]]; then
    git config --global user.name "CI Bot"
fi

git status

echo "MERGE bosh-deployment repo with git subtree"
if ! git subtree pull --prefix src/bosh-deployment \
    ../bosh-deployment master --squash \
    -m "merging the latest bosh-deployment repo"
then
   git rm -r src/bosh-deployment/ci
   git commit -m "merging the latest bosh-deployment repo"
fi

popd > /dev/null

echo "CLONE repository"
git clone bucc bucc-out
